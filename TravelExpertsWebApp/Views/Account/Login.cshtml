@model TravelExpertsData.Customer
@{
    ViewData["Title"] = "Login";
}

<h2>Login</h2>

<form asp-action="Login" method="post" class="col-md-7 mx-auto">
    <div class="form-group">
        <label asp-for="UserId" class="form-label">User ID</label>
        <input asp-for="UserId" type="text" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Password" class="form-label">Password</label>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary mb-2">Sign in</button>

    <div class="text-center">
        <p>Not a member? <a asp-action="Register">Register Now</a></p>
    </div>
</form>